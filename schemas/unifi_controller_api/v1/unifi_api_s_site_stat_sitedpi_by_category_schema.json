{
  "$id": "https://example.com/unifi_api_s_site_sitedpi",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Unifi Controller API site DPI stats by category",
  "type": "object",
  "properties": {
    "meta": {
      "type": "object",
      "properties": {
        "rc": {
          "type": "string",
          "enum": ["ok"]
        }
      },
      "required": ["rc"],
      "additionalProperties": false
    },
    "data": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/site_stat"
      }
    }
  },
  "required": ["meta", "data"],
  "additionalProperties": false,

  "$defs": {
    "site_stat": {
      "type": "object",
      "properties": {
        "last_updated": {"type":  "number"},
        "by_cat": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "cat": {
                "type": "number"
              },
              "rx_bytes": {
                "type": "number"
              },
              "tx_bytes": {
                "type": "number"
              },
              "rx_packets": {
                "type": "number"
              },
              "tx_packets": {
                "type": "number"
              }
            },
            "patternProperties" : {"^x_": {}},
            "additionalProperties": false
          }
        }
      },
      "patternProperties" : {"^x_": {}},
      "additionalProperties": false
    }
  }
}