{
  "$id": "https://example.com/unifi_api_s_site_stat_report_by_user",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Unifi Controller API Traffic Stats By AP",
  "type": "object",
  "properties": {
    "meta": {
      "type": "object",
      "properties": {
        "rc": {
          "type": "string",
          "enum": [
            "ok"
          ]
        }
      },
      "required": [
        "rc"
      ],
      "additionalProperties": false
    },
    "data": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/site_traffic_stat"
      }
    }
  },
  "required": [
    "meta",
    "data"
  ],
  "additionalProperties": false,
  "$defs": {
    "site_traffic_stat": {
      "type": "object",
      "properties": {
        "bytes": {"type": "number"},
        "num_sta": {"type": "number"},
        "rx_bytes": {"type": "number"},
        "tx_bytes": {"type": "number"},
        "time": {"type": "number"},
        "ap": {"type": "string"},
        "o": {"type": "string"},
        "oid": {"type": "string"}
      },
      "required": ["oid","o","ap","time","tx_bytes","rx_bytes","bytes", "num_sta"],
      "additionalProperties": false
    }
  }
}

